<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pine.dao.mysql.BrandDaoMapper">
    <select id="queryBrandByPageAndSort" resultType="com.pine.bean.dto.BrandDO">
        SELECT *
        FROM   tb_brand
        <if test="key != null">
            WHERE  name like "%"#{key}"%"
        </if>
        order by  #{sortBy}
        <if test="desc">
         DESC
        </if>
    </select>
</mapper>
